<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:rowCount="6"
    android:columnCount="4"
    >

    <EditText
        android:id="@+id/name_result"
        android:hint="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_columnSpan="4"
        android:textSize="50dp"
        android:textAlignment="viewEnd"
        android:background="@null"
        android:layout_margin="2dp"
        />

    <Button
        android:id="@+id/name_7"
        android:text="7"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:layout_margin="2dp"
        android:autoSizeTextType="uniform"
        />

    <Button
        android:id="@+id/name_8"
        android:text="8"
        android:layout_columnWeight="2"
        android:layout_rowWeight="2"
        android:layout_margin="2dp"
        android:autoSizeTextType="uniform"
        />

    <Button
        android:id="@+id/name_9"
        android:text="9"
        android:layout_columnWeight="3"
        android:layout_rowWeight="2"
        android:layout_margin="2dp"
        android:autoSizeTextType="uniform"
        />

    <Button
        android:id="@+id/name_c"
        android:text="C"
        android:layout_columnWeight="4"
        android:layout_rowWeight="2"
        android:layout_margin="2dp"
        android:autoSizeTextType="uniform"
        />

    <Button
        android:id="@+id/name_4"
        android:text="4"
        android:layout_columnWeight="1"
        android:layout_rowWeight="3"
        android:layout_margin="2dp"
        android:autoSizeTextType="uniform"
        />

    <Button
        android:id="@+id/name_5"
        android:text="5"
        android:layout_columnWeight="2"
        android:layout_rowWeight="3"
        android:layout_margin="2dp"
        android:autoSizeTextType="uniform"
        />

    <Button
        android:id="@+id/name_6"
        android:text="6"
        android:layout_columnWeight="3"
        android:layout_rowWeight="3"
        android:layout_margin="2dp"
        android:autoSizeTextType="uniform"
        />

    <Button
        android:id="@+id/name_add"
        android:text="+"
        android:layout_columnWeight="4"
        android:layout_rowWeight="3"
        android:layout_margin="2dp"
        android:layout_rowSpan="2"
        android:autoSizeTextType="uniform"
        />

    <Button
        android:id="@+id/name_1"
        android:text="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="4"
        android:layout_margin="2dp"
        android:autoSizeTextType="uniform"

        />

    <Button
        android:id="@+id/name_2"
        android:text="2"
        android:layout_columnWeight="2"
        android:layout_rowWeight="4"
        android:layout_margin="2dp"
        android:autoSizeTextType="uniform"
        />

    <Button
        android:id="@+id/name_3"
        android:text="3"
        android:layout_columnWeight="3"
        android:layout_rowWeight="4"
        android:layout_margin="2dp"
        android:autoSizeTextType="uniform"
        />


    <Button
        android:id="@+id/name_0"
        android:text="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="5"
        android:layout_margin="2dp"
        android:autoSizeTextType="uniform"
        />

    <Button
        android:id="@+id/name_pot"
        android:text="."
        android:layout_columnWeight="2"
        android:layout_rowWeight="5"
        android:layout_margin="2dp"
        android:autoSizeTextType="uniform"
        />

    <Button
        android:id="@+id/name_less"
        android:text="-"
        android:layout_columnWeight="3"
        android:layout_rowWeight="5"
        android:layout_columnSpan="2"
        android:layout_margin="2dp"
        android:autoSizeTextType="uniform"
        />

    <Button
        android:id="@+id/name_equal"
        android:text="="
        android:layout_columnWeight="1"
        android:layout_rowWeight="6"
        android:layout_columnSpan="4"
        android:layout_margin="2dp"
        android:autoSizeTextType="uniform"
        />

</GridLayout>